#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
scanf("%d",&n);
int a[n];
    for(int i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    long long tongc=0;
    long long tongl=0;
    int demc=0;int deml=0;
    for(int i=0;i<n;i++){
        if(a[i]%2==0) {demc++;
                   tongc=tongc+a[i];}
        else {deml++;
              tongl=tongl+a[i];
    }
    }
    printf("%d\n%d\n%lld\n%lld",demc,deml,tongc,tongl);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
